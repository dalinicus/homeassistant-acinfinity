{
  "name": "Home Assistant AC Infinity Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff",
        "ms-python.pytest",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "augment.vscode-augment"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.mypyEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.associations": {
          "*.yaml": "yaml",
          "*.yml": "yaml"
        }
      }
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder}/custom_components,target=/config/custom_components,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/config,target=/config,type=bind,consistency=cached"
  ],

  "forwardPorts": [8123],
  "portsAttributes": {
    "8123": {
      "label": "Home Assistant",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "pip install -r /workspaces/homeassistant-acinfinity/requirements.txt",

  "containerEnv": {
    "PYTHONPATH": "/config/custom_components"
  },

  "remoteUser": "root",
  "runArgs": ["--privileged"]
}
