{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Home Assistant",
      "type": "shell",
      "command": "python",
      "args": ["-m", "homeassistant", "--config", "/config"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "close": true
      },
      "problemMatcher": [],
      "detail": "Start Home Assistant with AC Infinity integration loaded"
    },
    {
      "label": "Stop Home Assistant",
      "type": "shell",
      "command": "pkill",
      "args": ["-f", "homeassistant"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "close": true
      },
      "problemMatcher": [],
      "detail": "Stop the running Home Assistant process"
    }
    
  ]
}

